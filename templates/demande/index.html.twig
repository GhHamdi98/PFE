                                        {% for demand in demande %}
                                            <tr>
                                                <td>{{ demand.id }}</td>
                                                <td>{{ demand.Service }}</td>
                                                <td>{{ demand.etat }}</td>
                                                <td>
                                                    {{ demand.Prospect }}
                                                </td>
                                                <td id="affecter">
                                                    {% if demand.partenaire==null %}
                                                    <div class="alert-default-info">Demande sans partenaire</div>
                                                    {% else %}
                                                        {{ demand.Partenaire }}
                                                    {% endif %}
                                                </td>
                                                <td id="affecter">
                                                    {% if demand.commerciale==null %}
                                                        <div class="alert-default-info">Demande sans commerciale</div>
                                                    {% else %}
                                                        {{ demand.commerciale }}
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if demand.lance ==1 %}
                                                        {% set id=demand.id+1-1 %}

                                                    {% set av=0 %}
                                                    {% for avancement in avancements %}
                                                        {% if avancement.demande.id==id %}
                                                            {% set av=avancement.pourcentage %}
                                                        {% endif %}
                                                    {% endfor %}
                                                        <div class="progress progress-sm">
                                                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="{{ av }}" aria-volumemin="0" aria-volumemax="100" style="width: {{ av }}%">
                                                            </div>
                                                        </div>
                                                        <small>
                                                            {{ av }}% Achevé
                                                        </small>
                                                    {% else %}
                                                        <div class="alert-default-info">Projet n'est pas encore lancé</div>
                                                    {% endif %}
                                                </td>
                                                <td>{{ demand.dateCreation ? demand.dateCreation|date('Y-m-d') : '' }}</td>
                                                <td>{{ demand.echeance ? demand.echeance|date('Y-m-d') : '' }}</td>
                                                <td>
                                                    <a href="{{ path('demande_show3', {'id': demand.id}) }}"><i class="fas fa-eye"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
