<body>
<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
<div class="image-container set-full-height" style="background-image: url('https://makcreates.com/wp-content/uploads/2018/03/black-background-mak-creates-web-design-services-1500-2500.jpg	')">
    <!--   Creative Tim Branding   -->

    <!--  Made With Paper Kit  -->

    <!--   Big container   -->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">

                <!--      Wizard container        -->
                <div class="wizard-container">

                    <div class="card wizard-card" data-color="orange" id="wizardProfile">
                        <form action="{{ path('demande_prospect') }}" method="post" id="myForm">
                            <!--        You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"          -->

                            <div class="wizard-header text-center">
                                <h3 class="wizard-title">Créer votre demande</h3>
                                <p class="category">
                                    Ces informations nous permettront de savoir plus sur vous et sur votre demande .</p>
                            </div>

                            <div class="wizard-navigation">
                                <div class="progress-with-circle">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
                                </div>
                                <ul>
                                    <li>
                                        <a href="#about" data-toggle="tab" >
                                            <div class="icon-circle">
                                                <i class="ti-agenda"></i>
                                            </div>
                                            Etape 1
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#account" data-toggle="tab">
                                            <div class="icon-circle">
                                                <i class="ti-agenda"></i>
                                            </div>
                                            Etape 2
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#addresss" data-toggle="tab">
                                            <div class="icon-circle">
                                                <i class="ti-agenda"></i>
                                            </div>
                                            Etape 3
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#address" data-toggle="tab">
                                            <div class="icon-circle">
                                                <i class="ti-user"></i>
                                            </div>
                                            Etape 4
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="tab-content">
                                <div class="tab-pane" id="about">
                                    <br>
                                    <div class="row">
                                        <div class="col-sm-4 col-sm-offset-1">
                                            <div class="picture-container">
                                                    <img src="//img.icons8.com/bubbles/140/000000/internet.png">
                                            </div>
                                        </div>
                                        <div class="col-sm-6" >
                                            <div class="form-group">
                                                <label>Nature du projet</label>
                                                <select  id="demande1_nature_projet" name="nature_projet"
                                                         class="form-control"  required>
                                                    <option value=>Choisissez la nature de votre projet ...</option>
                                                    <option value="Création d'un nouveau site web">Création d'un nouveau site web.</option>
                                                    <option value="Refonte d'un site Web existant">Refonte d'un site Web existant.</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-group" id="service" style="display: none">
                                                    <label>Choisissez service</label>
                                                    <select class="form-control" name="service" id="services" required>
                                                        <option value="">Choissiez service</option>
                                                        {% for services in service %}
                                                            <option value="{{ services.id }}">{{ services.nomService }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                <div id="refonte" style="display: none">
                                                    <label>Site</label>
                                                    <input class="form-control" name="refonte" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <label for="demande1_principale_projet">Principale Fonctionalitées du projet</label>
                                                <input type="text" id="demande1_principale_projet" name="principale_projet" maxlength="255"
                                                       class="form-control" placeholder="Inserer les principales fonctionalitées du projet..." required>
                                            </div>
                                        </div>
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <label for="demande1_module_b2c">Module B2C</label>
                                                <input type="text" id="demande1_module_b2c" name="module_b2c" maxlength="255"
                                                       class="form-control" placeholder="Choisir module B2C..." required>
                                            </div>
                                        </div>
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <label for="demande1_module_b2c">Module B2B</label>
                                                <input type="text" id="demande1_module_b2b" name="module_b2b" maxlength="255"
                                                       class="form-control" placeholder="Choisir module B2B..." required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="account"><br>
                                    <div class="row">
                                            <div class="col-sm-4 col-sm-offset-1">
                                            <label for="demande1_module_b2c">Langue</label>
                                            <select  id="demande1_langue_projet" name="langue_projet"  class="form-control" required>
                                                <option value>Choisir langue de site</option>
                                                <option value="Arabe">Arabe</option>
                                                <option value="French">Français</option>
                                                <option value="English">Anglais</option>
                                            </select><br>
                                            <label for="demande1_couleur_prefere">Couleur preferé</label>
                                            <input type="color" id="demande1_couleur_prefere " name="couleur_prefere"
                                                   class="form-control" placeholder="Choisir couleur..." required>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="demande1_logo">Avez Vous déja un logo</label>
                                                <select  id="demande1_logo" name="logo"  class="form-control" required>
                                                    <option value>Choisissez votre reponse</option>
                                                    <option value="1">Oui, j'ai déja un logo.</option>
                                                    <option value="0">Non, je veux créer un logo.</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="demande1_charte_graphique">Avez Vous déja une charte graphique</label>
                                                <select  id="demande1_charte_graphique" name="charte_graphique"  class="form-control" required>
                                                    <option value>Choisissez votre reponse</option>
                                                    <option value="1">Oui, j'ai déja une charte graphique.</option>
                                                    <option value="0">Non, je veux créer une charte graphique.</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 col-sm-offset-1">
                                        <div class="form-group" id="service">
                                            <label>Entrer votre budget :</label>
                                            <input class="form-control" type="number" name="budget" required>
                                        </div>
                                            <p style="color: red">* Les options seront ajoutées selon votre budget.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="addresss"><br>
                                    <div class="row">
                                        <div class="col-sm-7 col-sm-offset-1">
                                            <div class="form-group">
                                                <label for="demande1_site_similaire">Site similaire</label>
                                                <input type="text" id="demande1_site_similaire " name="site_similaire"
                                                       class="form-control" placeholder="Inserer un site site similaire...">
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label for="demande1_echeance">Date d'echeance</label>
                                                <input style="width: 200px;" type="date" id="demande1_echeance " name="echeance" value="2020-07-07"
                                                       class="form-control" placeholder="Inserer la date de mise en ligne..." required>
                                            </div>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group">
                                                <label for="demande1_echeance">Details</label>
                                                <textarea id="demande1_details " name="details"
                                                          class="form-control">
                                            </textarea>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="tab-pane" id="address"><br>
                                    <div class="row">
                                        <div class="col-sm-7 col-sm-offset-1">
                                            <div class="form-group">
                                                <label for="demande1_Prospect_username">Nom d'utilisateur</label>
                                                <input type="text" id="demande1_Prospect_username " name="username"
                                                       class="form-control" placeholder="Inserer nom d'utilisateur..." required>
                                                <input type="hidden" id="demande1_Prospect_password " name="password"
                                                       class="form-control" value="null">
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <label for="demande1_Prospect_pays">Pays</label>
                                            <select  id="demande1_Prospect_pays" name="pays" required="required" class="form-control">
                                                {% for pays in pay %}
                                                    <option value="{{ pays.id }}">{{ pays.nom }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <label for="demande1_Prospect_email">Email</label>
                                            <input type="email" id="demande1_Prospect_email " name="email"
                                                   class="form-control" placeholder="Inserer adresse mail..." required>
                                        </div>
                                        <div class="col-sm-3">
                                            <label for="demande1_Prospect_telephone">Telephone</label>
                                            <input type="tel" id="demande1_Prospect_telephone " name="telephone"
                                                   class="form-control" placeholder="Inserer Votre numéro de télephone ..." required>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group">
                                                <label for="demande1_Prospect_adresse">Adresse</label>
                                                <input type="text" id="demande1_Prospect_adresse " name="adresse"
                                                       class="form-control" placeholder="Inserer adresse ..." required>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <label for="demande1_Prospect_activite">Activité</label>
                                            <input style="width: 250px" type="text" id="demande1_Prospect_activite " name="activite"
                                                   class="form-control" placeholder="Inserer Activité ..." required>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="wizard-footer">
                                <div class="pull-right">
                                    <input type='button' id="suivant" class='btn btn-next btn-fill btn-warning btn-wd' name='next' value='Suivante' />
                                    <input type='submit' class='btn btn-finish btn-fill btn-warning btn-wd' name='finish'  id="submit" value='Terminer' />
                                </div>

                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Précédente' />
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </form>
                        <input id="msg" type="hidden" value="{{ msg }}">
                        <div class="loading" id="loader" style="display: none">Loading...</div>
                    </div>
                </div> <!-- wizard container -->
            </div>
        </div><!-- end row -->
    </div> <!--  big container -->

    <div class="footer">
        <div class="container text-center">
        </div>
    </div>

</div>

</body>
<script src="{{ asset('./plugins/jquery/jquery.min.js') }}"></script>

<script src="{{ asset('./plugins/jquery-ui/jquery-ui.min.js') }}"></script>

<script src="{{ asset('demande/assets/js/bootstrap.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('demande/assets/js/jquery.bootstrap.wizard.js') }}" type="text/javascript"></script>

<!--  Plugin for the Wizard -->
<script src="{{ asset('demande/assets/js/demo.js') }}" type="text/javascript"></script>
<script src="{{ asset('demande/assets/js/paper-bootstrap-wizard.js') }}" type="text/javascript"></script>

<!--  More information about jquery.validate here: https://jqueryvalidation.org/	 -->
<script src="{{ asset('demande/assets/js/jquery.validate.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('./dist/js/demo.js') }}"></script>

<script>
    $("#demande1_nature_projet").change(function () {
        if ($("#demande1_nature_projet").val()==="Création d'un nouveau site web"){
            $("#refonte").hide();
            $("#service").show();
            }
        else if($("#demande1_nature_projet").val()==="Refonte d'un site Web existant"){
            $("#service").hide();
            $("#refonte").show();
        }
        else{
            $("#service").hide();
            $("#refonte").hide();
        }
    })

</script>
<script>
    function sub() {
        $("#myForm").submit();
            $("#loader").show()
    }
</script>
<script src="{{ asset('plugins/sweetalert2/sweetalert2.min.js') }}"></script>
<script src="{{ asset('plugins/toastr/toastr.min.js') }}"></script>
<script type="text/javascript">
    if ($('#msg').val()==='ok')
    {
        toastr.success('Votre demande a été bien envoyée.');
        toastr.info('Un email explicatif sur votre demande a été envoyé sur votre adresse mail .');
        $("#loader").hide()
    }
</script>
</html>
