<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('\n'+
'Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}"><br>
    <button class="btn btn-danger">Supprimer</button>
</form>
